<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">
	<filter>
		<filter-name>SecurityFilter</filter-name>
		<filter-class>org.telokers.servlet.security.SecurityFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>SecurityFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<description>Application initialization entry point</description>
		<listener-class>org.telokers.servlet.ApplicationInitializationListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>searchServletApi</servlet-name>
		<servlet-class>org.telokers.servlet.api.SearchServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>importStandingDataApi</servlet-name>
		<servlet-class>org.telokers.servlet.api.ImportStandingData</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>searchServletApi</servlet-name>
		<url-pattern>/api/search</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>importStandingDataApi</servlet-name>
		<url-pattern>/api/import</url-pattern>
	</servlet-mapping>
	<security-constraint>
		<web-resource-collection>
			<url-pattern>/*</url-pattern>
		</web-resource-collection>
		<user-data-constraint>
			<transport-guarantee>CONFIDENTIAL</transport-guarantee>
		</user-data-constraint>
	</security-constraint>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
